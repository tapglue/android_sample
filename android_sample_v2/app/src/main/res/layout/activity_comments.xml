<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/background">

    <include android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             layout="@layout/toolbar"/>
    <include android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             layout="@layout/event"/>
    <include android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             layout="@layout/post_comment" android:layout_gravity="center_horizontal"/>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/comments_list"
            android:divider="@android:color/transparent"
            android:dividerHeight="20.0sp" android:paddingLeft="10dp" android:paddingRight="10dp"/>
</LinearLayout>